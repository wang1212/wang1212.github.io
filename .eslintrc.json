{
    "env": {
        "node"   : true,
        "browser": true,
        "es6"    : true,
        "jquery" : true
    },
    "extends"      : "eslint:recommended",
    "parser"       : "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx"                         : true
        },
        "sourceType": "module"
    },
    "plugins": [],
    "rules"  : {
        "no-console": [
            "error",
            {
                "allow": [
                    "warn",
                    "error"
                ]
            }
        ],
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "globals": {
        "Router": false
    }
}